{
    "options": {
       "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
		{
			"label": "cmake",
			"command": "cmake",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",
				".."
			]
		},
		{
			"label": "make",
			"command": "make",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "CMake Build",
			"dependsOn": [
				"cmake",
				"make"
			]
		}
	],
    "version": "2.0.0"
 }